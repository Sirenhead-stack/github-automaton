{
    "name": "Github Bot",
    "description": "A bot to manage open source projects",
    "repository": "https://github.com/niranjan94/github-bot",
    "keywords": [
        "github", "bot"
    ],
    "env": {
        "BOT_USERNAME": {
            "required": true
        },
        "BASE64_PRIVATE_KEY": {
            "required": true
        },
        "BOT_ID": {
            "required": true,
        },
        "GITHUB_SECRET": {
            "generator": "secret"
        },
        "NPM_CONFIG_PRODUCTION": "false"
    },
    "buildpacks": [
        {
            "url": "heroku/nodejs"
        }
    ]
}
